<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/cardStyle"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/coverImg"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                tools:src="@mipmap/ic_launcher"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_alignParentLeft="true" />
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/coverImg"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">
                
                <TextView
                    android:id="@+id/froshTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="My Awesome haircut"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hair_cut_date"
                    android:textColor="#c2c2c2"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/froshDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="9th May, 2018"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_marginTop="1dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/salon_city"
                    android:textColor="#c2c2c2"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/froshLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Naturals hair Salon"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="1dp"/>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>